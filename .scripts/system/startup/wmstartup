#! /bin/sh

## Killall

killall volumeicon
killall greenclip
killall dunst
killall mpDris2
killall mpd
killall lxsession
killall wpa-cute
killall blueman-applet
killall picom

sleep 1

## Startup

# Volume

volumeicon &

# keybinds

~/.scripts/system/sxhkd-start &

# Greenclip

greenclip daemon &

# setupkeyboard
~/.scripts/system/keyboardsetup &

# Notifications

exec dunst &

# mpd

mpd &
mpDris2 &

# Walpaper

exec nitrogen --restore &

# Lxsession

exec lxsession &

# Picom

exec picom --experimental-backends -b &

# Wifi stuff and Bluetooth

wpa-cute -t &

blueman-applet &

pulseaudio &
