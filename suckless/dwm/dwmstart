## Startup DWM

#! /bin/bash

# If picom is running, kill it to prevent multiple instances
if ps -A | grep picom; then
	killall -q picom
fi


# Compositor

exec picom --experimental-backends --backend glx &

# Walpaper

exec nitrogen --restore &

# Notifications

exec dunst &

# Hotkeys
sxhkd &

# Loop
while true; do
  dwm >/dev/null 2>&1
done


# Start dwm

exec dwm &

exec xrandr --dpi 196
