# Media control

XF86AudioPlay
  playerctl play-pause

XF86AudioNext
  playerctl next

XF86AudioPrev
  playerctl previous

# Open program

XF86Calculator
  alacritty -e R 


# Screenshots

Print
  maim -m 10 | xclip -selection clipboard -t image/png

alt + Print
  var="$HOME/Pictures/screenshots/$(date +%d-%m-%y--%I-%M-%p).png"; \
  maim -s -m 10 "$var"; \
  xclip -sel c -t image/png "$var"

shift + Print
  var="$HOME/Pictures/screenshots/$(date +%d-%m-%y--%I-%M-%p).png"; \
  maim -m 10 "$var"; \
  xclip -sel c -t image/png "$var"

alt + space
  ~/.scripts/special-characters/saccent

#Spanish character

alt + a
  xdotool key U00E1
  
